<script>
let balance = 25;
let adsSeen = 0;
let refCount = 0;
let refIncome = 0;

function watchAd() {
  show_10095726();
  adsSeen++;
  balance += 2;
  document.getElementById("balance").innerText = "‡ß≥" + balance.toFixed(2);
  document.getElementById("adsSeen").innerText = adsSeen;
}

function goHome() {
  document.getElementById("referBox").style.display = "none";
  alert("üè† ‡¶Ü‡¶™‡¶®‡¶ø ‡¶è‡¶ñ‡¶® ‡¶π‡ßã‡¶Æ‡ßá ‡¶Ü‡¶õ‡ßá‡¶®!");
