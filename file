function support() {
  window.open("https://t.me/shameulbashir", "_blank");
}

function toggleRefer() {
  const box = document.getElementById("referBox");
  if (box.style.display === "none") {
    box.style.display = "block";
  } else {
    box.style.display = "none";
  }
}

function copyRefer() {
  const copyText = document.getElementById("referLink");
  copyText.select();
  copyText.setSelectionRange(0, 99999);
  document.execCommand("copy");
  refCount++;
  refIncome += 30;
  balance += 30;
  document.getElementById("refCount").innerText = refCount;
  document.getElementById("refIncome").innerText = refIncome;
  document.getElementById("balance").innerText = "‡ß≥" + balance.toFixed(2);
  alert("‚úÖ Refer Link Copied! ‡ß©‡ß¶ ‡¶ü‡¶æ‡¶ï‡¶æ ‡¶Ø‡ßÅ‡¶ï‡ßç‡¶§ ‡¶π‡¶Ø‡¶º‡ßá‡¶õ‡ßá!");
}

function openWithdraw() {
  document.getElementById("withdrawModal").style.display = "flex";
}

function closeWithdraw() {
  document.getElementById("withdrawModal").style.display = "none";
}

function submitWithdraw() {
  const method = document.getElementById("bankOption").value;
  const name = document.getElementById("accName").value;
  const num = document.getElementById("accNumber").value;
  if(name && num){
    alert(`‚úÖ Withdraw Request Sent!\nMethod: ${method}\nName: ${name}\nNumber: ${num}`);
    closeWithdraw();
  } else {
    alert("‚ö†Ô∏è ‡¶∏‡¶¨ ‡¶§‡¶•‡ßç‡¶Ø ‡¶™‡ßÇ‡¶∞‡¶£ ‡¶ï‡¶∞‡ßÅ‡¶®!");
